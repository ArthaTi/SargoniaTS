{
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": "off",
        "@typescript-eslint/semi": "error",
        "no-var": "error",
        "no-case-declarations": "off",
        "no-unused-vars": "off",
        "no-console": "off",
        "no-empty": "off",
        "no-dupe-class-members": "off",
        "no-constant-condition": "off",
        "no-cond-assign": "off",
        "no-undef": "off",
        "require-atomic-updates": "off"
    }
}
